@model TechJobs6Persistent.ViewModels.AddEmployerViewModel

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessCreateEmployerForm" method="post">

    <div class="form-group">
        <label>Employer Name</label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>

    <br />

    <div class="form-group">
        <label>Employer Location</label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>

    <br />

    <input type="submit" value="Add Employer" />

</form>